set -euxo pipefail

OT_OPTIONS=(
    "-DOT_THREAD_VERSION=1.3.1"
    "-DOT_VENDOR_MODEL=RFSIM-BR-v1.3.1"
    "-DOT_BACKBONE_ROUTER=ON"
    "-DOT_BACKBONE_ROUTER_MULTICAST_ROUTING=ON"
    "-DOT_BORDER_ROUTER=ON"
    "-DOT_BORDER_ROUTING=ON"
    "-DOT_BORDER_ROUTING_DHCP6_PD=ON"
    "-DOT_BORDER_ROUTING_COUNTERS=ON"
    "-DOT_BORDER_AGENT=ON"
    "-DOT_COAP_BLOCK=ON"
    "-DOT_DNSSD_SERVER=ON"
    "-DOT_NAT64_BORDER_ROUTING=ON"
    "-DOT_NETDATA_PUBLISHER=ON"
    "-DOT_SRP_SERVER=ON"
    "-DOT_TREL=OFF"
    "-DOT_POWER_SUPPLY=EXTERNAL"
    "-DOT_DEVICE_PROP_LEADER_WEIGHT=ON"
    "-DOT_MLE_MAX_CHILDREN=32"
    "-DOT_HISTORY_TRACKER=ON"
)
readonly OT_OPTIONS

git submodule update
rm -rf build
./script/build "${OT_OPTIONS[@]}"
cp ./build/bin/ot-cli-ftd ./ot-versions/ot-cli-ftd_br
